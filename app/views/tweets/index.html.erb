<p id="notice"><%= notice %></p>

<h1>Tweets</h1>

<table class="table table-dark">
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.content %></td>
        <td><%= tweet.user.email %></td>
        <td><%= image_tag tweet.image_url(:thumb) %></td>
        <td><%= link_to 'Show', tweet %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) if current_user == tweet.user %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } if current_user == tweet.user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tweet', new_tweet_path, class: 'btn btn-primary' %>
